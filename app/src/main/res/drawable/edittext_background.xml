<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado enfocado -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0" /> <!-- Amarillo suave semi-transparente -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#FFC107" /> <!-- Borde Ã¡mbar -->
        </shape>
    </item>

    <!-- Estado por defecto -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80FFFFFF" /> <!-- Blanco semi-transparente -->
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#CCCCCC" />
        </shape>
    </item>
</selector>
