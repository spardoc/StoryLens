<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/dialog_background">

    <ProgressBar
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:indeterminateTint="@color/comic_blue"
        android:indeterminateDrawable="@drawable/comic_progress"/>

    <TextView
        android:id="@+id/tvLoadingMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Generando imÃ¡genes..."
        android:textSize="18sp"
        android:textColor="#333333"
        android:fontFamily="@font/comicneue_bold"/>

    <TextView
        android:id="@+id/tvLoadingSubtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Esto puede tomar unos segundos..."
        android:textSize="14sp"
        android:textColor="#666666"
        android:fontFamily="@font/comicneue_regular"/>
</LinearLayout>