<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/comic_button_paper"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_pdf_icon"
        android:contentDescription="PDF Icon"
        android:layout_marginEnd="12dp"
        app:tint="#F44336" />

    <TextView
        android:id="@+id/pdfNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="archivo.pdf"
        android:textSize="16sp"
        android:fontFamily="@font/comicneue_bold" />
</LinearLayout>